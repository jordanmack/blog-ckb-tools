<article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
	<header class="mb-8">
		<h1 class="text-4xl font-bold content-text mb-4">
			{{ title }}
		</h1>
		<div class="text-sm content-text mb-4">
			<time datetime="{{ date | date('Y-m-d') }}">
				{{ date | date("F j, Y") }}
			</time>
		</div>
		{# 
		{% if tags and tags.length > 0 %}
