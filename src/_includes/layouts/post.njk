---
layout: layouts/base.njk
---

<article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
	<header class="mb-8">
		<h1 class="text-4xl font-bold text-gray-900 dark:text-gray-100 mb-4">
			{{ title }}
		</h1>
		<div class="text-sm text-gray-600 dark:text-gray-400 mb-4">
			<time datetime="{{ date | date('Y-m-d') }}">
				{{ date | date("F j, Y") }}
			</time>
		</div>
		{% if tags and tags.length > 0 %}
		<div class="flex flex-wrap gap-2">
			{% for tag in tags %}
			{% if tag != "post" %}
			<span class="inline-block bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 px-3 py-1 text-sm rounded-full">
				{{ tag }}
			</span>
			{% endif %}
			{% endfor %}
		</div>
		{% endif %}
	</header>

	<div class="prose prose-lg max-w-none">
		{{ content | safe }}
	</div>

	<footer class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-700">
		<div class="flex justify-between items-center">
			<a href="/" class="text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-200 font-medium">
				‚Üê Back to posts
			</a>
		</div>
	</footer>
</article>