---
layout: layouts/base.njk
title: "Home"
---

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
	<section>
		
		{% if collections.post and collections.post.length > 0 %}
		<div class="space-y-4">
			{# Display pinned posts first #}
			{% set pinnedPosts = [] %}
			{% set regularPosts = [] %}
			
			{%- for post in collections.post | reverse -%}
				{%- if post.data.pinned -%}
					{%- set pinnedPosts = (pinnedPosts.push(post), pinnedPosts) -%}
				{%- else -%}
					{%- set regularPosts = (regularPosts.push(post), regularPosts) -%}
				{%- endif -%}
			{%- endfor -%}
			
			{# Render pinned posts #}
			{% for post in pinnedPosts %}
			<article class="post-card post-card-pinned pb-8">
				{% if post.data['post-image'] %}
				<a href="{{ post.url }}">
					<img src="{{ post.data['post-image'] }}" alt="{{ post.data.title }}" style="float: right; margin-left: 1rem; margin-bottom: 1rem; max-width: 200px; border-radius: 0.5rem;">
				</a>
				{% endif %}

				<header class="mb-4">
					<h3 class="text-xl font-semibold mb-2">
						<a href="{{ post.url }}" class="content-text link-green">
							{{ post.data.title }}
						</a>
					</h3>
					{#
					<div class="text-sm mb-3 content-text">
						<time datetime="{{ post.data.date | date('Y-m-d') }}">
							{{ post.data.date | date("F j, Y") }}
						</time>
					</div>
					#}
					{#
					{% if post.data.tags and post.data.tags.length > 0 %}
					<div class="flex flex-wrap gap-2 mb-3">
						{% for tag in post.data.tags %}
						{% if tag != "post" %}
						<a href="/tags/{{ tag }}/" class="tag hover:bg-opacity-30 transition-colors">
							{{ tag }}
						</a>
						{% endif %}
						{% endfor %}
					</div>
					{% endif %}
					#}
				</header>

				<div class="mb-4 content-text">
					{% set excerpt = post.templateContent | striptags | truncateSentence(350) %}
					{{ excerpt }}
				</div>
				
				<a href="{{ post.url }}" class="inline-flex items-center font-medium link-green">
					Read more
					<svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
					</svg>
				</a>
			</article>
			{% endfor %}
			
			{# Render regular posts #}
			{% for post in regularPosts %}
			<article class="post-card pb-8">
				{% if post.data['post-image'] %}
				<a href="{{ post.url }}">
					<img src="{{ post.data['post-image'] }}" alt="{{ post.data.title }}" style="float: right; margin-left: 1rem; margin-bottom: 1rem; max-width: 200px; border-radius: 0.5rem;">
				</a>
				{% endif %}

				<header class="mb-4">
					<h3 class="text-xl font-semibold mb-2">
						<a href="{{ post.url }}" class="content-text link-green">
							{{ post.data.title }}
						</a>
					</h3>
					{#
					<div class="text-sm mb-3 content-text">
						<time datetime="{{ post.data.date | date('Y-m-d') }}">
							{{ post.data.date | date("F j, Y") }}
						</time>
					</div>
					#}
					{#
					{% if post.data.tags and post.data.tags.length > 0 %}
					<div class="flex flex-wrap gap-2 mb-3">
						{% for tag in post.data.tags %}
						{% if tag != "post" %}
						<a href="/tags/{{ tag }}/" class="tag hover:bg-opacity-30 transition-colors">
							{{ tag }}
						</a>
						{% endif %}
						{% endfor %}
					</div>
					{% endif %}
					#}
				</header>

				<div class="mb-4 content-text">
					{% set excerpt = post.templateContent | striptags | truncateSentence(350) %}
					{{ excerpt }}
				</div>
				
				<a href="{{ post.url }}" class="inline-flex items-center font-medium link-green">
					Read more
					<svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
					</svg>
				</a>
			</article>
			{% endfor %}
		</div>
		{% else %}
		<div class="text-center py-12">
			<p class="text-lg content-text">
				No posts yet. Check back soon for new content!
			</p>
		</div>
		{% endif %}
	</section>
</div>